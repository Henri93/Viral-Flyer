<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff323330">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Message"
        android:id="@+id/writeButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle_button_ring"
        android:paddingBottom="75dp"
        android:paddingTop="75dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:textSize="18sp"
        android:onClick="write"
        android:textColor="#ff37b058"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Message"
        android:id="@+id/readButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle_button"
        android:paddingLeft="50dp"
        android:paddingTop="75dp"
        android:paddingRight="50dp"
        android:paddingBottom="75dp"
        android:textSize="18sp"
        android:onClick="read"
        android:textColor="#ff424340"
        android:layout_below="@id/writeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help"
        android:id="@+id/helpButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rect_ring"
        android:textColor="#ff37b058"
        android:textSize="18sp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
